@model IEnumerable<PartyPlannerV6.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Bestellingen</h1>

<p>
    <a asp-action="Create">Niewe bestelling plaatsen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payed)
            </td>
                @if (User.IsInRole("Organizer"))
                {
                    <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Bewerken</a> |
                    <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Verwijderen</a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>
